{
    "compilerOptions": {
        "target": "ES6",
        "removeComments": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
        "outDir": "dist",
        "typeRoots": [
            "./node_modules/@types/"
        ],
        "strict": false
        //"target": "ES5",
        // "sourceMap": true,
        // "typeRoots": [
        //     "node_modules/@types/"
        // ],
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        // "declaration": false,
        // "watch": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        ".vscode",
        "node_modules",
        "dist"
    ]
}